<h1> Edit Your Profile </h1>

<%= form_for @user do |f| %>

  <%= f.label :email, "Email" %>
  <%= f.email_field :email, autofocus: true, :input_html => { :value => @user.email } %>

  <%= f.label :bio, "What do you want others to know about you? Add a bio here." %>
  <%= f.text_field :bio %>

  <%= f.submit "Update Profile", :id=>"Update Profile" %>
<% end %>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>
