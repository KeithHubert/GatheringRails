<div class='bumper-25'></div>
<h2 class='text-center'>Log in</h2>
<div class='bumper-25'></div>

<section>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form--login__box'}) do |f| %>

  <div class="form--login__field">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: 'Email', autofocus: true %>
  </div>

  <div class="form--login__field">
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder: 'Password', autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form--login__field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class='bumper-25'></div>

  <div class="form--login__submit-container">
    <%= f.submit "Log in", class: 'form--login__submit-button' %>
  </div>

  <% end %>
</section>
